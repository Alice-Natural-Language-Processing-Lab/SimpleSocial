@using SimpleSocial.Data.Models
@model SimpleSocia.Services.Models.Account.MyProfileViewModel


<script src="~/lib/jquery/dist/jquery.js"></script>
@{
    var counter = 0;
}


@foreach (var post in Model.Posts)
{

    counter++;
    var likeClassName = "like-ajax-" + counter;

    @await Component.InvokeAsync("SinglePost", new { post = post, likeClassName = likeClassName, profilePicture = Model.ProfilePicture, commentInputModel = Model.CommentInputModel })

}
